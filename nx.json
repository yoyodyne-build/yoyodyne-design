{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": ["default", "!{projectRoot}/.stylelintrc(.(json|yml|yaml|js))?"],
    "sharedGlobals": []
  },
  "targetDefaults": {
    "stylelint": {
      "inputs": ["default", "{workspaceRoot}/.stylelintrc(.(json|yml|yaml|js))?"],
      "cache": true
    }
  }
}
